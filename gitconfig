[alias]
    ci = commit
    cp = commit-and-push
    cp = checkout
    fixyp = commit --fixup
    mend = commit --amend
    pop = reset HEAD^
    fp = fpush
    fu = fetch upstream
    fo = fetch origin
    lg = log --color --graph --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ls = log --pretty=format:"%C(yellow)%h\\ %Creset%s%Cblue\\ [%cn]\\%Cred%d" --decorate
    ll = ls --numstat
    r = rebase
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip
    ri = rebase --interactive
    st = status -sb
    prune-merged = "!git branch --merged | grep dm/ | grep -v "\\*" | xargs -n1 git branch -d"
    ignore = "!f() { echo \"$1\" >> .gitignore; }; f"

[init]
	defaultBranch = main

[push]
    default = current

[pull]
    rebase = true

[commit]
    gpgsign = true

[rebase]
    stat = true
    autosquash = true

[color]
    ui = auto

[rerere]
    enable = true

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global

[commit]
    gpgsign = true

[gpg]
    format = ssh

# Local configuration file
[include]
    path = ~/.gitconfig_local
